# =============================================================================
# NihontoWatch Environment Variables
# Copy this file to .env.local and fill in real values
# =============================================================================

# Base URL (used for OG images, canonical URLs, social sharing)
NEXT_PUBLIC_BASE_URL=https://nihontowatch.com

# -----------------------------------------------------------------------------
# Supabase (main database — shared with Oshi-scrapper)
# Get these from: Supabase Dashboard → Settings → API
# -----------------------------------------------------------------------------

# Public (safe for browser — read-only via RLS)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Private (server-side only — needed for writes, admin ops, cron jobs)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# Yuhinkai / Oshi-v2 Supabase (artist profiles, catalog lookups)
# Separate Supabase project. Read-only access for NihontoWatch.
# -----------------------------------------------------------------------------

OSHI_V2_SUPABASE_URL=https://YOUR_OSHI_V2_PROJECT.supabase.co
OSHI_V2_SUPABASE_ANON_KEY=your-oshi-v2-anon-key

# Yuhinkai service role (needed for artist AI descriptions, catalog writes)
YUHINKAI_SUPABASE_URL=https://YOUR_OSHI_V2_PROJECT.supabase.co
YUHINKAI_SUPABASE_KEY=your-yuhinkai-service-role-key

# -----------------------------------------------------------------------------
# Cron Job Authentication
# Random secret used to authenticate Vercel cron requests
# Generate with: openssl rand -hex 32
# -----------------------------------------------------------------------------

CRON_SECRET=your-cron-secret

# -----------------------------------------------------------------------------
# SendGrid (email alerts for saved searches, price drops)
# Get from: SendGrid Dashboard → Settings → API Keys
# -----------------------------------------------------------------------------

SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=notifications@nihontowatch.com

# -----------------------------------------------------------------------------
# OpenRouter (AI features — translation, inquiry drafts)
# Get from: https://openrouter.ai/keys
# -----------------------------------------------------------------------------

OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key

# -----------------------------------------------------------------------------
# GitHub (trigger Oshi-scrapper workflows from admin UI)
# Create a fine-grained PAT with Actions: read+write on the scrapper repo
# -----------------------------------------------------------------------------

GITHUB_TOKEN=github_pat_your-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=oshi-scrapper

# -----------------------------------------------------------------------------
# Stripe (subscriptions — not active during trial mode)
# Get from: Stripe Dashboard → Developers → API keys
# -----------------------------------------------------------------------------

# STRIPE_SECRET_KEY=sk_live_your-stripe-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-key

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Trial mode: all premium features free for all users (true/false)
NEXT_PUBLIC_TRIAL_MODE=true

# Collection manager feature toggle (true/false)
NEXT_PUBLIC_COLLECTION_ENABLED=true

# Smart crop focal points (true/false, defaults to true if omitted)
# NEXT_PUBLIC_SMART_CROP=true
